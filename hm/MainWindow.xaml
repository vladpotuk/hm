<Window x:Class="hm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gutenberg Books Viewer" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Список книг з обкладинками -->
        <ListBox x:Name="BooksListBox" Grid.Row="0" Margin="10"
                 SelectionChanged="BookTitleSelected">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="50" Height="75" Source="{Binding CoverImageUrl}" Margin="5"/>
                        <TextBlock Text="{Binding Title}" Padding="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Область для відображення тексту книги -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <TextBlock x:Name="BookTextBlock" TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</Window>
