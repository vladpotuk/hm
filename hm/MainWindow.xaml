<Window x:Class="hm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bing Search App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtSearchQuery" Width="400" Margin="0,0,10,0" VerticalAlignment="Center" />
            <Button Content="Search" Click="SearchButton_Click" VerticalAlignment="Center"/>
        </StackPanel>

        <WebBrowser Grid.Row="1" x:Name="webBrowser" Margin="10" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
